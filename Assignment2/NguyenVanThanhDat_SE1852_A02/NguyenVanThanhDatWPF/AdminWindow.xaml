<Window x:Class="NguyenVanThanhDatWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"  
        xmlns:local="clr-namespace:NguyenVanThanhDatWPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="0,0,20,20">
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <GradientStop Color="{StaticResource BgColor3}"></GradientStop>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Nav -->
                <ColumnDefinition Width="250" MinWidth="250" MaxWidth="400"/>
                <!-- Content -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            
            <!-- Nav -->
            <Border CornerRadius="0, 0, 0, 10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource BgColor3}" Offset="0"/>
                        <GradientStop Color="{StaticResource BgColor4}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <StackPanel Height="35"
                                Margin="15,25,0 40">
                        <TextBlock Text="ADMIN PANEL" 
                                   Foreground="{StaticResource color1}"
                                   FontFamily="Arial"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <!-- Report -->
                    <RadioButton x:Name="btnReport"
                                    GroupName="Menu"
                                    Style="{StaticResource menuButton}"
                                    Tag="{StaticResource color2}" Checked="btnReport_Checked">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="File" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Report" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    
                   <!-- Customers -->
                    <StackPanel>
                        <RadioButton x:Name="btnCustomers"
                                     GroupName="Menu"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color3}" Checked="btnCustomers_Checked">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Users" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Customers" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                    
                    <!-- Products -->
                    <StackPanel>
                        <RadioButton x:Name="btnProducts"
                                     GroupName="Menu"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color4}" Checked="btnProducts_Checked">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="List" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Products" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <!-- Orders -->
                    <StackPanel>
                        <RadioButton x:Name="btnOrders"
                                     GroupName="Menu"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color5}" Checked="btnOrders_Checked">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Truck" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Orders" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <!-- Profile -->
                    <StackPanel>
                        <RadioButton x:Name="btnProfile"
                                     GroupName="Menu"
                                     Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color8}" Checked="btnProfile_Checked">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Gear" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="Profile" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </StackPanel> 
            </Border>
            
            <!-- Content -->
            <Border CornerRadius="0,0,10,0"
                    Grid.Column="1">
                <Border.Background >
                    <LinearGradientBrush>
                        <GradientStop Color="{StaticResource BgColor6}" Offset="0"/>
                        <GradientStop Color="{StaticResource BgColor7}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition MaxHeight="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border HorizontalAlignment="Right"
                            Margin="0,10,10,0">
                        <Button x:Name="btnLogout"
                                Grid.Column="1"                            
                                Content="Logout"            
                                FontSize="12"
                                FontFamily="Arial"
                                Cursor="Hand"
                                BorderThickness="0"
                                Foreground="White"
                                VerticalAlignment="Top" Width="100" Click="btnLogout_Click_1">    
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Coral"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightCoral"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>

                    <ContentControl x:Name="MainContent" 
                                    Grid.Row="1">

                    </ContentControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
