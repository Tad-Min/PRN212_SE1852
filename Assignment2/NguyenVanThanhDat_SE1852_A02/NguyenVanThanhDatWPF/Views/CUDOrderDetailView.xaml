<UserControl x:Class="NguyenVanThanhDatWPF.Views.CUDOrderDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NguyenVanThanhDatWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
                CornerRadius="20"
                Margin="0,0,0,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Background="#200F53">
            <StackPanel Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="0,30,0,10">

                <!-- Title -->
                <Label Content="Order Detail"
                    FontFamily="Arial"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="{StaticResource color1}"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10"/>

                <!-- OrderId -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Order Id: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBlock x:Name="txbOrderId"
                            Background="Transparent"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"/>
                </DockPanel>

                <!-- Product -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="CustomerId: "
                    FontSize="20"
                    FontFamily="Arial"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Foreground="White"/>
                    <ComboBox x:Name="cbProducts"
                          FontFamily="Arial"
                          FontSize="20"/>
                </DockPanel>

                <!-- UnitPrice -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Unit Price: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBox x:Name="txtUnitPrice"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                <!-- Quantity -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Quantity: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBox x:Name="txtQuantity"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>
                <!-- Discount -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Discount: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBox x:Name="txtDiscount"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">
                    <!-- Update Order Detail -->
                    <Button x:Name="btnUpdate" Content="Update"
                    Visibility="Collapsed"
                    Width="170" Height="50"
                    FontFamily="Arial" FontSize="20"
                    Foreground="AliceBlue"
                    Margin="10" Click="btnUpdate_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                            Background="{StaticResource btnColor1}"
                            Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Add Order Detail -->
                    <Button x:Name="btnAdd" Content="Add"
                        Visibility="Collapsed"
                        Width="170" Height="50"
                        FontFamily="Arial" FontSize="20"
                        Foreground="AliceBlue"
                        Margin="10"
                        Click="btnAdd_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                            Background="{StaticResource btnColor1}"
                            Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
