<UserControl x:Class="NguyenVanThanhDatWPF.Views.CUDOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NguyenVanThanhDatWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
        CornerRadius="20"
        Margin="0,0,0,0"
        VerticalAlignment="Center"
        HorizontalAlignment="Stretch"
        Background="#200F53">
            <StackPanel Orientation="Vertical"
                VerticalAlignment="Center"
                Margin="0,30,0,10">

                <!-- Title -->
                <Label Content="Order"
                        FontFamily="Arial"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="{StaticResource color1}"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10"/>

                <!-- OrderId -->
                <DockPanel x:Name="dpTypeOrderId"
                           Margin="10" LastChildFill="True"
                           Visibility="Collapsed">
                    <TextBlock Text="Order Id: "
                        FontSize="20"
                        FontFamily="Arial"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Foreground="White"/>
                    <TextBox x:Name="txtOrderId"
                         Background="Transparent"
                         BorderThickness="0,0,0,1"
                         FontSize="20"
                         FontFamily="Arial"
                         Foreground="White"
                         BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                <DockPanel x:Name="dpViewOrderId"
                           Margin="10" LastChildFill="True"
                           Visibility="Collapsed">
                    <TextBlock Text="Order Id: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBlock x:Name="txbOrderId"
                                Background="Transparent"
                                FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"/>
                </DockPanel>
                <!-- CustomerId -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="CustomerId: "
                        FontSize="20"
                        FontFamily="Arial"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Foreground="White"/>
                    <ComboBox x:Name="cbCustomer"
                              FontFamily="Arial"
                              FontSize="20"
                              Foreground="Black"/>
                </DockPanel>

                <!-- EmployeeId -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Employee Id: "
                        FontSize="20"
                        FontFamily="Arial"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Left"
                        Foreground="White"/>
                    <TextBlock x:Name="txbEmployee"
                        Background="Transparent"
                        FontSize="20"
                        FontFamily="Arial"
                         Foreground="White"/>
                </DockPanel>

                <!-- OrderDate -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Order Date: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBlock x:Name="txbOrderDate"
                                Background="Transparent"
                                FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"/>
                </DockPanel>
                
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
                    <!-- Update Order -->
                    <Button x:Name="btnUpdate" Content="Update Order"
                        Visibility="Collapsed"
                        Width="170" Height="50"
                        FontFamily="Arial" FontSize="20"
                        Foreground="AliceBlue"
                        Margin="10" Click="btnUpdate_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                Background="{StaticResource btnColor1}"
                                Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Add Order -->
                    <Button x:Name="btnAdd" Content="Add Order"
                            Visibility="Collapsed"
                            Width="170" Height="50"
                            FontFamily="Arial" FontSize="20"
                            Foreground="AliceBlue"
                            Margin="10"
                            Click="btnAdd_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                Background="{StaticResource btnColor1}"
                                Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
