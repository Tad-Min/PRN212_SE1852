<UserControl x:Class="NguyenVanThanhDatWPF.Views.CUDProductViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NguyenVanThanhDatWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
            CornerRadius="20"
            Margin="0,0,0,0"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Background="#200F53">
            <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="0,30,0,10">

                <!-- Title -->
                <Label Content="Product"
                   FontFamily="Arial"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="{StaticResource color1}"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"/>

                <!-- ProductId -->
                <DockPanel x:Name="dpViewProductId"
                            Margin="10" LastChildFill="True"
                           Visibility="Visible">
                    <TextBlock Text="Product Id: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBlock x:Name="tbxProductId"
                         Background="Transparent"
                         FontSize="20"
                         FontFamily="Arial"
                         Foreground="White"/>
                </DockPanel>

                <!-- ProductName -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Product Name: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBox x:Name="txtProductName"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                <!-- SupplierId -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Supplier Id: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBox x:Name="txtSupplierId"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                <!-- CategoryID -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Category Id: "
                                    FontSize="20"
                                    FontFamily="Arial"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Left"
                                    Foreground="White"/>
                    <ComboBox x:Name="cbCategory"
                              Background="Transparent"
                              FontFamily="Arial"
                              FontSize="20"
                              Foreground="Black">
                        
                    </ComboBox>


                </DockPanel>
                
                <!-- QuantityPerUnit -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Unit Price: "
                    FontSize="20"
                    FontFamily="Arial"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Foreground="White"/>
                    <TextBox x:Name="txtUnitPrice"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                
                <!-- QuantityPerUnit -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Quantity Per Unit: "
                            FontSize="20"
                            FontFamily="Arial"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            Foreground="White"/>
                    <TextBox x:Name="txtQuantityPerUnit"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>

                <!-- UnitsInStock -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Units In Stock: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBox x:Name="txtUnitsInStock"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>
                
                <!-- ReorderLevel -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Reorder Level: "
                                FontSize="20"
                                FontFamily="Arial"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Foreground="White"/>
                    <TextBox x:Name="txtReorderLevel"
                            Background="Transparent"
                            BorderThickness="0,0,0,1"
                            FontSize="20"
                            FontFamily="Arial"
                             Foreground="White"
                            BorderBrush="{StaticResource color5}"/>
                </DockPanel>
                
                <!-- Discontinued -->
                <DockPanel Margin="10" LastChildFill="True">
                    <TextBlock Text="Discontinued: "
                          FontSize="20"
                          FontFamily="Arial"
                          VerticalAlignment="Center"
                          DockPanel.Dock="Left"
                          Foreground="White"/>
                    <CheckBox x:Name="chkDiscontinued"
                              Style="{StaticResource CustomCheckBox}"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </DockPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10">
                    <!-- Update Product -->
                    <Button x:Name="btnUpdate" Content="Update"
                            Visibility="Collapsed"
                            Width="170" Height="50"
                            FontFamily="Arial" FontSize="20"
                            Foreground="AliceBlue"
                            Margin="10" Click="btnUpdate_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                    Background="{StaticResource btnColor1}"
                                    Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Add Product -->
                    <Button x:Name="btnAdd" Content="Add"
                            Visibility="Collapsed"
                            Width="170" Height="50"
                            FontFamily="Arial" FontSize="20"
                            Foreground="AliceBlue"
                            Margin="10" Click="btnAdd_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10"
                                    Background="{StaticResource btnColor1}"
                                    Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
