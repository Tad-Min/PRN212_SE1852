<UserControl x:Class="NguyenVanThanhDatWPF.Views.AdminLoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NguyenVanThanhDatWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="0,30,0,10">

        <!-- Title -->
        <Label Content="LOGIN"
            FontFamily="Arial"
            FontSize="30"
            FontWeight="Bold"
            Foreground="{StaticResource color1}"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"/>

        <!-- Username -->
        <DockPanel Margin="10" LastChildFill="True">
            <TextBlock Text="UserName: "
                    FontSize="20"
                    FontFamily="Arial"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Foreground="Black"
                    Width="120"/>
            <TextBox x:Name="txtUserName"
                    Background="Transparent"
                    BorderThickness="0,0,0,1"
                    FontSize="20"
                    FontFamily="Arial"
                    BorderBrush="{StaticResource color5}"/>
        </DockPanel>

        <!-- Password -->
        <DockPanel Margin="10" LastChildFill="True">
            <TextBlock Text="Password: "
                    FontSize="20"
                    FontFamily="Arial"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Foreground="Black"
                    Width="120"/>
            <PasswordBox x:Name="txtPassword"
                        Background="Transparent"
                        BorderThickness="0,0,0,1"
                        FontSize="20"
                        FontFamily="Arial"
                        BorderBrush="{StaticResource color5}"/>
        </DockPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">
            <Button x:Name="btnLogin" Content="Login"
                Width="100" Height="50"
                FontFamily="Arial" FontSize="20"
                Foreground="AliceBlue"
                Margin="10" Click="btnLogin_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                            Background="{StaticResource btnColor1}"
                            Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnLoginCustomer" Content="Customer Login"
                Width="170" Height="50"
                FontFamily="Arial" FontSize="20"
                Foreground="AliceBlue"
                Margin="10" Click="btnLoginCustomer_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                            Background="{StaticResource btnColor2}"
                            Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnExit" Content="Exit"
                Width="100" Height="50"
                FontFamily="Arial" FontSize="20"
                Foreground="AliceBlue"
                Margin="10" Click="btnExit_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                            Background="{StaticResource btnColor3}"
                            Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
